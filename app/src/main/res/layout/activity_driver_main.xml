<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/driverToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blueLogo"
        app:layout_constraintBottom_toTopOf="@id/driver_fragment_container"
        app:popupTheme="@style/PopupOverlay"
        app:title="Surveil Pharma"
        app:titleTextColor="@color/white"
        app:titleMarginStart="20dp">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/driver_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/driverToolbar"
        app:layout_constraintBottom_toTopOf="@id/nav_view_driver"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@drawable/customized_tab_icon"
        app:itemTextColor="@drawable/customized_tab_icon"
        app:menu="@menu/pharmacist_driver_bottom_nav_menu" />

</android.support.constraint.ConstraintLayout>